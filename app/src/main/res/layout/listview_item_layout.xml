<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smsListView"
    android:paddingTop="4dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/transactionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox android:id="@+id/checkbox_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iconView"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/addressName"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Item name here..."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
        <!-- <TextView
            android:id="@+id/transactionAmount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:text="Item name here..."
            android:textSize="20dp" /> -->



    </LinearLayout>

    <LinearLayout
        android:id="@+id/subHeaderLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLine"
        android:layout_toRightOf="@+id/iconView" >

        <TextView
            android:id="@+id/messageLine"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Item name here..."
            android:textSize="12dp" />

    </LinearLayout>

</RelativeLayout>

